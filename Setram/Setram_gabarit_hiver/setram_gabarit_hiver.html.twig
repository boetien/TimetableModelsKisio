{% extends templatePath ~ "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
   <style>
        #small-right-blocks #text_block_code{
           background: white url("{{ asset(imgPath ~ 'infos_timeo.png') }}") no-repeat bottom left;
           background-size: 77px auto;
        }
    </style>
{% endblock %}

{% block additionnal_wrapper_class %}multicolor{% endblock %}

{% block timetable_downer_content %}
    <div id="timetables-wrapper" class="clearfix">
        {{ macros.season_validity('banner_season_validity', currentSeason, 'banner-inline') }}
        {% for i in 1..4 %}
            {% set id = 'timegrid_block_' ~ i %}
            {% set block = attribute(timetable.blocks, id) %}
            {% set addNotes = true %}
            {% if i == 3 %}
                {% set nbLines = 10 %}
            {% elseif i == 4 %}
                {% set nbLines = 8 %}
            {% else %}
                {% set nbLines = 12 %}
            {% endif %}
            {% include "CanalTPMttBundle:Layouts:timegrid.html.twig" with {'addNotes': addNotes, 'nbLines' : nbLines} %}
        {% endfor %}


        <div id="bottom-right-block" class="clearfix">
                <div id="small-right-blocks">
                    {{ macros.text('text_block_infos', {title:'Titre de bloc', content:'Contenu de bloc'}, 'route', 'small-block block') }}
                    {{ macros.stop_point_pois('text_block_pdv', stopPoint, 'small-block', 'Points de vente') }}
                    {{ macros.stop_point_code('text_block_code', stopPoint, 'small-block', 'Code TIMEO de cet arrÃªt', 'timeo') }}
                </div>
                <img class="setram-logo" src="{{ asset(imgPath ~ 'bandeau_logo_setram.png') }}">
        </div>

    </div>
{% endblock %}
