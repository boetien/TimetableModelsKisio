{% extends templatePath ~ "base.html.twig" %}

{% block additionnal_wrapper_class %}multicolor{% endblock %}

{% block stop_timetable_downer_content %}
    <div id="timetables-wrapper" class="clearfix">
        {% for i in 1..3 %}
            {% set id = 'timegrid_block_' ~ i %}
            {% set block = attribute(stopTimetable.blocks, id) %}
            {% set addNotes = true %}
            {% if i == 1 %}
                <div class="row1-wrapper">
            {% endif %}
            {% if i == 3 %}
                <div>
            {% endif %}
            {% include "CanalTPMttBundle:Layouts:timegrid.html.twig" with {'addNotes': addNotes, 'nbLines' : 8} %}
            {% if i == 2 %}
                </div>
                <div>
                    <div class="additionnal-text-blocks black-block">
                        <div id="" class="centered-text-block text-block-wrapper">
                            Pendant les vacances scolaires, se référer aux horaires indiqués dans le tableau horaires "Lundi à vendredi - Vacances scolaires"
                        </div>
                    </div>
                    <div class="additionnal-text-blocks dark-block">
                        <div id="" class="centered-text-block text-block-wrapper">
                            Période de vacances :<br/>
                            19 au 31 octobre - 21 décembre au 2 janvier - 15 au 27 février - 11 au 23 avril
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            {% endif %}
        {% endfor %}
        <div class="information-text-blocks timegrid-container">
            <div id="{{ id }}" class="centered-text-block text-block-wrapper">
                <div class="title">Dimanche et jours fériés</div>
                <div class="relative">
                    <div class="content"><p>Cette ligne ne fonctionne pas les dimanche et jours fériés.</p></div>
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock %}
